<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroClienteActivity">

    <EditText
        android:id="@+id/txtCidade"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_alignStart="@+id/txtNome"
        android:layout_below="@+id/txtDataNascimento"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtDataNascimento"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Data de Nascimento"
        android:inputType="date" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtNome"
        android:layout_alignTop="@+id/txtCidade"
        android:layout_alignRight="@+id/txtNome" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCidade"
        android:layout_alignStart="@+id/txtCidade"
        android:layout_below="@+id/txtCidade"
        android:layout_marginTop="10dp"
        android:text="Sexo:"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <RadioGroup
        android:layout_width="266dp"
        android:layout_height="83dp"
        android:layout_alignEnd="@+id/txtCidade"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtCidade"
        android:layout_below="@+id/txtCidade"
        android:layout_marginBottom="235dp"
        android:layout_marginEnd="-148dp"
        android:layout_marginRight="-148dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView2">

        <RadioButton
            android:id="@+id/radioMasculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCidade"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_weight="1"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/radioFeminino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCidade"
            android:layout_toEndOf="@+id/radioMasculino"
            android:layout_toRightOf="@+id/radioMasculino"
            android:layout_weight="1"
            android:text="Feminino" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/cbVip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtCidade"
        android:layout_alignTop="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="120dp"
        android:text="Cliente VIP"
        android:layout_alignLeft="@+id/txtCidade" />

    <Button
        android:id="@+id/btSalvar"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/txtNome"
        android:layout_below="@+id/cbVip"
        android:layout_marginTop="10dp"
        android:text="Salvar"
        android:layout_alignRight="@+id/txtNome" />

    <Button
        android:id="@+id/btCancelar"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/txtCidade"
        android:layout_below="@+id/cbVip"
        android:layout_marginTop="10dp"
        android:text="Cancelar"
        android:layout_alignLeft="@+id/txtCidade" />

</RelativeLayout>